= form_for(@todo) do |f|
  - if @todo.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@todo.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @todo.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field 
    = f.label :list
    %br
    = f.collection_select :list_id, List.all, :id, :title
  .field
    = f.label :subject
    %br
    = f.text_area :subject

  .actions
    = f.submit
