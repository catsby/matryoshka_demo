= form_for(@todo) do |f|
  - if @todo.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@todo.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @todo.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :user
    %br
    = f.text_field :user
  .field
    = f.label :subject
    %br
    = f.text_area :subject

  .actions
    = f.submit
